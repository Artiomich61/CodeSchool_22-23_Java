import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        int n = scanner.nextInt(), k = scanner.nextInt();
        System.out.println(appleDiv2(n, k));
    }

    static int appleDiv2(int n, int k) {
        return k % n;
    }
    
